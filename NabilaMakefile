all: exe

create.o: create.c create.h
    gcc -c create.c -o create.o

display.o: display.c display.h create.h
    gcc -c display.c -o display.o

main.o: main.c display.h create.h
    gcc -c main.c -o main.o

exe: main.o create.o display.o
    gcc main.o create.o display.o -o exe

clean:
    rm -f *.o
    rm -f exe

//old make file

# Compiler
CC = gcc

# Compiler flags
CFLAGS = -std=c11

# Libraries
LIBS = -lncurses

# Source files
SRC = main.c display.c create.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable
TARGET = Project_Pinguinsss

all: $(TARGET)

$(TARGET): $(OBJ)
    $(CC) $(CFLAGS) -o $@ $^ $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	rm -f $(OBJ) $(TARGET)
